<!doctype html>
<html lang="en">
<head>
  <meta http-equiv="Content-type" content="text/html; charset=utf-8"/>
  <title>MovieTwitvia - <%= @title || "Powered by TwitterAuth" %></title>
  <meta name="description" content="" />
  <meta name="keywords" content="" />

  <%= stylesheet_link_tag 'reset', 'typography', 'base' %>
  <%= javascript_include_tag :defaults %>
</head>
<body>
  <div class="container">
    <%= render "layouts/brand" %>

    <% if flash[:error] %>
    <div class='flash error'><%= flash[:error] %></div>
    <% end %><% if flash[:notice] %>
    <div class='flash notice'><%= flash[:notice] %></div>
    <% end %>

    <div class="content">
      <div class="body">
        <section id='question'>
          <header>
            <h2>Current Question</h2>
          </header>
          <h3 id='current_question'><%= @question.get_question %></h3>
        </section>

        <%= yield %>

      </div>
      <%= render "layouts/sidebar" %>
    </div>
    <%= render "layouts/footer" %>
  </div>
  <%#= render "layouts/analytics" %>

<script type="text/javascript">
$(function(){
  setTimeout(function() {
    if ($('.flash.notice')) $('.flash.notice').slideUp('slow');
    }, 5000
  );
  updateQuestion();
})

function updateQuestion() {
  $.ajax({
    type: "GET",
    url: "/current_question",
    dataType: "html",
    success: function(html) {
      var currQ = $('#current_question').html();
      if (html != currQ) {
        $('#current_question').fadeOut('slow');
        $('#current_question').html(html);
        $('#current_question').fadeIn('slow');
        $('section#question').effect("highlight", {}, 3000);
      }
      setTimeout(function() {
        updateQuestion();
        }, 30000
      );
    }
  });
}
</script>
</body>
</html>
